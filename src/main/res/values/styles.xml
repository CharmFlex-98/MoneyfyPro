<?xml version="1.0" encoding="utf-8"?>
<resources>
<!--    Divider-->
    <style name="divider">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:background">@color/black</item>
    </style>

<!--    Expense detail dialog title style-->
    <style name="detail_dialog_title_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">1</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">0.35</item>
        <item name="android:background">@drawable/card_border</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

<!--    Expense detail dialog content style-->
    <style name="detail_dialog_content_style">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_column">2</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_weight">0.65</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textSize">14sp</item>
    </style>

<!--    Bottom sheet dialog style-->
    <style name="bottom_sheet_dialog_style" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>
</resources>